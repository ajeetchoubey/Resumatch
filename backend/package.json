{
    "name": "resumatch-backend",
    "version": "1.0.0",
    "description": "Backend API for Resumatch - AI Resume Optimizer",
    "main": "src/server.js",
    "type": "module",
    "scripts": {
        "dev": "node --watch --env-file=.env.local src/server.js",
        "start": "node src/server.js",
        "db:generate": "node --env-file=.env.local ./node_modules/.bin/drizzle-kit generate",
        "db:push": "node --env-file=.env.local ./node_modules/.bin/drizzle-kit push",
        "db:studio": "node --env-file=.env.local ./node_modules/.bin/drizzle-kit studio"
    },
    "dependencies": {
        "@google/generative-ai": "^0.21.0",
        "@supabase/supabase-js": "^2.47.10",
        "cors": "^2.8.5",
        "drizzle-orm": "^0.38.2",
        "express": "^4.21.2",
        "groq-sdk": "^0.37.0",
        "mammoth": "^1.8.0",
        "multer": "^1.4.5-lts.1",
        "pdf-parse": "^1.1.1",
        "postgres": "^3.4.5"
    },
    "devDependencies": {
        "drizzle-kit": "^0.30.1"
    }
}
